{% extends 'base.html.twig' %}

{% block title %}Liste des jeux - {{ parent() }}{% endblock %}

{% block body %}
{# div.card>table.table>thead>tr>th*3 #}
<div class="card">
    <div class="card-header">
        <a class="btn btn-success" href="{{ path('app_game_new') }}">Ajouter un jeu</a>
    </div>

    <div class="card-body">
        <form action="" method="get" class="d-flex">
            <select name="published" class="form-control mx-1">
                <option value="ALL">Tous</option>
                <option value="1" {% if app.request.get('published') == '1' %}selected{% endif %}>Publiés</option>
                <option value="0" {% if app.request.get('published') == '0' %}selected{% endif %}>Non publiés</option>
            </select>

            <input type="search" name="search" class="form-control mx-1" placeholder="Rechercher..." value="{{ app.request.get('search') }}">

            <select name="category" class="form-control mx-1">
                <option value="ALL">Toutes les catégories</option>
                {% for cat in categories %}
                <option value="{{ cat.id }}" {% if app.request.get('category') == cat.id %}selected{% endif %}>{{ cat.name }}</option>
                {% endfor %}
            </select>

            <button type="submit" class="btn btn-primary">Filtrer</button>
        </form>
    </div>

    {# table.table>thead>tr>th*3 #}
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Date</th>
                <th>Catégorie</th>
                <th>Consoles</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for entity in entities %}
            <tr class="{% if not entity.published %}table-danger{% endif %}">
                <td>
                    <a href="{{ path('app_game_show', {'id': entity.id}) }}">
                        {{ entity.name }}
                    </a>
                </td>
                <td>{% if entity.releaseDate is not empty %}
                    {{ entity.releaseDate|date('d/m/Y') }}
                    {% else %}
                    -
                    {% endif %}
                </td>
                <td>{{ entity.category }}</td>
                <td>
                    {% for support in entity.supports %}
                    <span class="badge bg-info me-1">{{ support }}</span>
                    {% endfor %}
                </td>
                <td>
                    {{ entity.author }}
                </td>
                <td>
                    <a class="btn btn-light" href="{{ path('app_game_edit', {'id': entity.id}) }}">Modifier</a>
                    <a class="btn btn-danger me-1" href="{{ path('app_game_delete', {'id': entity.id}) }}">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="card-footer">
        {% include 'decorator/_pagination.html.twig' with {'route': 'app_game_index'} %}
    </div>
</div>
{% endblock %}
